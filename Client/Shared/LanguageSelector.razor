@inject NavigationManager _navigationManager

<MudMenu Icon="@Icons.Material.Outlined.Translate" Color="Color.Inherit" Direction="Direction.Bottom" OffsetY="true" Dense="true">
    @foreach (var language in languages)
    {
        <MudMenuItem Style="text-align: center" OnClick="(()=> ChangeLanguageAsync(language.Code))">
            <MudAvatar Image="@language.ImagePath" Style="width:40px; height:40px" />
            <MudText Align="Align.Center" Inline="true" Style="float:right;margin-top:10px;margin-left:12px">
                @language.DisplayName
