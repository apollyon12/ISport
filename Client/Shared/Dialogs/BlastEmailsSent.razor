@namespace iSportsRecruiting.Client.Shared.Dialogs

<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.Email" Class="mr-3 mb-n1"/>
            We sent all your emails!
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudGrid Style="text-align: center">
            <MudItem sm="12" Class="p-6">
                <MudText Typo="Typo.body2">Blast was send to <strong>@Coaches</strong> coaches</MudText>
            </MudItem>
        </MudGrid>
    </DialogContent>
    <DialogActions>
            <MudButton Color="Color.Secondary" Variant="Variant.Filled" OnClick="Confirm">OK</MudButton>
        </DialogActions>
</MudDialog>

@code {

    [CascadingParameter]
    MudDialogInstance MudDialog { get; set; }
    
    [Parameter]
    public int Coaches { get; set; }

    void Confirm() => MudDialog.Close(DialogResult.Ok(true));
    void Cancel() => MudDialog.Cancel();
}